@model List<Talents.Models.People>
<html>
<head>
    <title>Index</title>
</head>
<body>
    <h1>Talentos EasyComTec</h1>
    <div align="right">
        <a href="@Url.Action("Insert", "Home")" class="btn btn-primary">
            New
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
        </a>
    </div>
    <br />

    <table class="table" style="border:groove; border-bottom-width:3;">
        <thead>
            <tr>
                <th class="col-xs-1" align="right">#</th>
                <th class="col-md-2">Name</th>
                <th class="col-md-2">Mail</th>
                <th class="col-md-2">City</th>
                <th class="col-md-2">Salary Requirements</th>
                <th class="col-xs-1"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th class="col-xs-1" align="right">@item.PeopleId</th>
                    <td class="col-md-2">@item.Name</td>
                    <td class="col-md-2">@item.Email</td>
                    <td class="col-md-2">@item.City.Name</td>
                    <td class="col-md-2">@Math.Round(item.Price,2)</td>
                    <td class="col-xs-1" align="right">                       
                        <a asp-action="Delete" asp-route-id="@item.PeopleId" class="btn btn-info" onclick="return confirm('Are you sure you to delete this Record? / Você tem certeza que deseja excluir esse registro?');">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </a>
                        <a asp-action="Update" asp-route-id="@item.PeopleId" class="btn btn-info">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>